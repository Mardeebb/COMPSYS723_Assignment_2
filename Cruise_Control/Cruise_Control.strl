module Cruise_Control:
input On, Off, Resume, Set, QuickDecel, QuickAccel;
input Accel, Brake, Speed;
output CruiseSpeed: double;
output ThrottleCmd: double;

% Cruise control state values:
% OFF = 0, ON = 1, STDBY = 2, DISABLE = 3, REGULATE = 4

var CruiseState: integer in

%producer thread
loop
	await On;
	emit CruiseSpeed(60.0);
	emit ThrottleCmd(0.5);
end loop

end var
end module


